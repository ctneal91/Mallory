<div class="container">
  <% @products.each do |product| %>
    <div class="product_container">
      <%= image_tag(product.img_file, size: '250x320') %>
      <div class="product_name">
        <%= product.item %>
      </div>
      <div class="product_price">
        <%= number_to_currency(product.price) %>
      </div>
      <button class="btn"><%= link_to "More Details", product_path(pid: product.pid) %></button>
    </div>
  <% end %>
</div>
